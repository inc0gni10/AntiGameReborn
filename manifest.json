{
  "name": "AntiGameReborn",
  "short_name": "AGR",
  "version": "7.1.0.2",
  "description": "AGR - the other OGame experience for all communities.",
  "default_locale": "en",
  "manifest_version": 2,
  "permissions": [
    "unlimitedStorage",
    "storage",
    "http://*.ogame.gameforge.com/*",
    "https://*.ogame.gameforge.com/*"
  ],
  "web_accessible_resources": [
    "js/*.js",
    "skin/*",
    "loca/*.json"
  ],
  "background": {
    "scripts": [
      "js/agb_init.js",
      "js/agb_basic.js",
      "js/agb_common.js",
      "js/agb_main.js",
      "js/agb_para.js",
      "js/agb_chrome.js",
      "bootstrap.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.ogame.gameforge.com/game/index.php*"
      ],
      "js": [
        "js/main.js",
        "js/libs/purify.min.js",
        "js/basics.js",
        "js/common.js",
        "js/overlays.js",
        "js/init.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "http://*.ogame.gameforge.com/*",
        "https://*.ogame.gameforge.com/*"
      ],
      "include_globs": [
        "http://board.??.ogame.gameforge.com/*"
      ],
      "css": [
        "skin/board.css"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "Icon-16.png",
    "48": "Icon-48.png",
    "128": "Icon-128.png"
  },
  "minimum_chrome_version": "32"
}